rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    match /sellers/{sellerId} {
      allow read, write: if request.auth != null && request.auth.uid == sellerId;
      allow read: if request.auth != null;
    }
    
    match /products/{productId} {
      allow read: if true;
      allow write: if request.auth != null && 
        (resource == null || request.auth.uid == resource.data.sellerId);
    }
    
    match /orders/{orderId} {
      allow read, write: if request.auth != null && 
        (request.auth.uid == resource.data.buyerId ||
         request.auth.uid in resource.data.sellerIds);
    }
    
    match /sellerOrders/{orderNumber} {
      allow read, write: if request.auth != null && 
        request.auth.uid == resource.data.sellerId;
    }
    
    match /emailTriggers/{triggerId} {
      allow read, write: if false;
    }
  }
}
